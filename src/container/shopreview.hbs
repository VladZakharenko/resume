{{> shopheader navigation=navigation}}
<section class="p-2 m-2">
    <div class="row">
        <div class="col-8">
            {{#with formBlock}}
            <div>
                <h2>{{header}}</h2>
                <p>{{rating.title}}: {{rating.value}}</p>
            </div>

            {{#with actionBlock}}
            <ul class="nav nav-tabs">
                {{#each tabs}}
                <li class="nav-item">
                    <a class="nav-link {{#if isActive}} active{{/if}}" href="#">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            <hr class="my-5">

            {{#with report}}
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">{{title}}</h6>
                    <a class="btn btn-dark my-2" href={{button.link}}>{{button.text}}</a>
                </div>
            </div>
            {{/with}}
            <hr class="my-5">
            {{/with}}

            {{#with feedbackBlock}}
            <div>
                <h2>{{title}}</h2>
                <div class="my-5">
                    {{#each buttons}}
                    <a class="btn {{#if isWarning}} btn-warning {{/if}} {{#if isDanger}} btn-danger {{/if}} {{#if isSuccess}} btn-success {{/if}}"
                        href={{link}}>{{text}}</a>
                    {{/each}}
                </div>
            </div>

            {{/with}}

        </div>

        {{#with goodsInfo}}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <img class="card-img" src={{photo}}>
                    <h5 class="card-title mt-3">{{name}}</h5>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">{{price}}</h5>
                    <p class="card-text"> {{#if inMarket}}Є в наявності {{else}}Товар відсутній {{/if}}</p>
                    {{#each buttons}}
                    <a class="btn my-2{{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-dark {{/if}} {{#if isSuccess}} btn-success {{/if}}"
                        href={{link}}>{{text}}</a> <br>
                    {{/each}}
                </div>
            </div>
            <div class="card my-3">
                <div class="card-body">
                    <h6 class="card-title mt-3">{{seller.title}}: <b>{{seller.value}}</b></h6>
                </div>
            </div>
        </div>
        {{/with}}
        {{/with}}
    </div>
    <hr class="my-2">



    {{#each reviewList}}
    {{> reviewItem}}

    {{/each}}

    {{> shopaction service=service}}

    <hr class="my-4">

</section>
{{> shopfooter footer=footer}}