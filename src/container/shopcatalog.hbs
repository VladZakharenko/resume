{{> shopheader navigation=navigation}}
<section class="p-2 m-2">
    {{> breadcrumb}}
    <br>
    <h2 class="my-3">{{header}}</h2>

    <div class="row my-3">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option value="" disabled selected>{{placeholder}}</option>
                {{#each options}}
                <option value={{value}}>{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row my-3">

        {{#with filterBlock}}
        <div class="col-4">
            <div class="card my-2">
                <div class="card-body">
                    <div class="cart-text">
                        {{#with sellers}}
                        <p>{{title}}</p>
                        {{#each list}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">{{value}}</input>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>

                        {{#with brands}}
                        <p>{{title}}</p>
                        <input class="form-control my-2" placeholder={{input.placeholder}}></input>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">{{value}}</input>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>

                        {{#with price}}
                        <p>{{title}}</p>
                        <input class="form-control my-2" placeholder="{{range.from}}"></input>
                        <input class="form-control my-2" placeholder="{{range.to}}"></input>
                        <a class="btn btn-outline-dark" href={{button.link}}>{{button.text}}</a>
                        {{/with}}
                        <hr>

                        {{#each filterList}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">{{value}}</input>
                        </div>
                        {{/each}}
                        {{#unless @last}}
                        <hr> {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}

        <div class="col-8">
            <div class="row">
                {{#each goodsList}}
                {{> catalogItem }}
                {{/each}}
            </div>
        </div>

    </div>

    {{> shopaction service=service}}

    <hr class="my-4">

</section>
{{> shopfooter footer=footer}}