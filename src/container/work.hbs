{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big="true"}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>
                            {{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (по теперішній час)
                            {{/if}}
                        </div>
                        <div>
                            {{#if company.url}}
                            {{> link href=company.url text=company.name blank=true noLine=true }}
                            {{else}} <b>{{company.name}}</b>
                            {{/if}}

                        </div>
                        <br>
                        <div><strong>Кількість проектів - {{projectAmount}}</strong></div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link href=url text=name blank=true noLine=true }}</div>
                                <div>
                                    <p>{{about}}</p>
                                </div>
                                <div>
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>
                                <div>
                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <br>
                                <div>
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>
                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    <br>
                    {{/each}}

                </ul>
            </div>

        </section>

    </main>
    {{/with}}


</div>

