<div class="col-6">
    <div class="card p-2 my-2">
        <img src={{img}} class="card-img">
        <div class="card-body">
            <h5>{{#if isHot}}
                <span class="badge bg-warning">HOT</span> {{/if}}
                {{#if isNew}}
                <span class="badge bg-primary">Нове</span> {{/if}}
            </h5>

            <h5>{{#if isFast}}
                <span class="badge bg-success">Швидка доставка</span> {{/if}}
                {{#if isFree}}
                <span class="badge bg-dark">Безкоштовна доставка</span> {{/if}}
            </h5>
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{review.amount}} {{review.text}}</p>
            <h6 class="card-title">{{price}}</h6>
            <p>{{delivery}}</p>

            {{#each buttons}}
            <a class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-dark {{/if}}"
                href="{{link}}">{{text}}</a>
            {{/each}}

            <div class="mt-3">
                <ul>
                    {{#each characteristics}}
                    <li>
                        {{title}}: {{value}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>