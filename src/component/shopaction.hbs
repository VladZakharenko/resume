{{#with service}}
<div class="row g-3 p-2">
    <div class="card text-bg-success text-center">
        <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{description}}</p>
            {{#each buttons}}
            <a class="btn btn-primary" href={{link}} rel={{rel}}>{{text}}</a>
            {{/each}}
        </div>
    </div>
</div>
{{/with}}