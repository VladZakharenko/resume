<div class="row">

    <div class="col-4 mt-2">
        <h5>{{number}}</h5>
        <p class="pe-3">{{status}}</p>
    </div>
    <div class="col-2 mt-3">
        {{amount.title}}<br>
        <h6>{{amount.value}}</h6>
    </div>
    <div class="col-4">
        {{#each images}}
        <img src={{this}}></img>
        {{/each}}
    </div>
    {{#with button}}
    <div class="col-2 mt-2">
        <button
            class="btn my-2 {{#if isPrimary}} btn-primary{{/if}} {{#if isDanger}} btn-outline-danger{{/if}}">{{text}}</button>
    </div>
    {{/with}}
</div>
<hr>