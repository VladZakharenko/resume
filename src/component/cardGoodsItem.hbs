{{#each goodsBlock}}
<div class="card my-3">
    <div class="row card-body">
        <img class="col-2 img-fluid rounded-start" src={{image}}></img>
        <div class="col-4 mt-4">
            <h5 class="card-title">{{name}}</h5>
            <p class="pe-3">{{description}}</p>
        </div>
        <div class="col-2 mt-5">
            {{price.title}}<br>
            <h6>{{price.value}}</h6>
        </div>
        <div class="col-2 mt-5">
            {{amount}}<br>
        </div>
        <div class="col-2 mt-3">
            {{#each buttons}}
            <button
                class="btn my-3 {{#if isPrimary}} btn-primary{{/if}} {{#if isDanger}} btn-outline-danger{{/if}}">{{text}}</button>
            {{/each}}
        </div>
    </div>
</div>
{{/each}}